<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover" id="iBeacons-service-list">
    <thead>
      <tr>
        <th>Service Name</th>
        <th>Service URL</th>
        <th>It's an App?</th>
        <th>Industry</th>
        <th>Usage</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% @beacons.each do |beacon| %>
        <tr class="<%= cycle("odd", "even") -%>">
          <td><%= beacon.name %></td>
          <td><%= beacon.link %></td>
          <td>Yes</td>
          <td class="center">Library</td>
          <td class="center">Push favourites</td>
          <td>
            <%= link_to 'Show', beacon, :class => 'btn btn-primary' %>
            <%= link_to 'Edit', edit_beacon_path(beacon), :class => 'btn btn-primary' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<!-- /.table-responsive -->
<br>

<%= link_to 'Add New Beacon Service', new_beacon_path, :class => 'btn btn-primary' %>
